<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment">

    <TextView android:text="dbPath: " android:id="@+id/dbPath" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <TextView android:text="dbTitle: " android:id="@+id/dbTitle" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dbPath" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/restaurantInput"
        android:layout_below="@+id/dbTitle"
        android:layout_alignParentStart="true"
        android:hint="Restaurant ID" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CREATE RECORD"
        android:id="@+id/create_record_button"
        android:layout_below="@+id/restaurantInput"
        android:layout_alignParentStart="true"
        android:onClick="createRecord"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="READ RECORD"
        android:id="@+id/read_record_button"
        android:layout_below="@+id/create_record_button"
        android:layout_centerHorizontal="true"
        android:onClick="readRecord"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE RECORD"
        android:id="@+id/update_record_button"
        android:layout_below="@+id/read_record_button"
        android:layout_centerHorizontal="true"
        android:onClick="updateRecord"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="DELETE RECORD"
        android:id="@+id/delete_record_button"
        android:layout_below="@+id/update_record_button"
        android:layout_centerHorizontal="true"
        android:onClick="deleteRecord"/>

</RelativeLayout>
