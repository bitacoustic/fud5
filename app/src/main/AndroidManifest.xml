<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csc413.team5.fud5"
    android:versionCode="1"
    android:versionName="1.0">

    <!-- Used by the Google Play Services Location API -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/main_title"
            android:screenOrientation="nosensor">

        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name=".SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="nosensor"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserPreferencesActivity"
            android:label="@string/title_activity_user_preferences"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="nosensor" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".userpreferences.ApplicationSettingsActivity"
            android:label="@string/title_activity_application_settings"
            android:parentActivityName=".UserPreferencesActivity"
            android:screenOrientation="nosensor">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UserPreferencesActivity" />
        </activity>

        <!-- BEGIN TEST ACTIVITIES -->
        <!-- These are to be excluded from the public release -->
        <!-- Don't add any activities that are part of the actual app in this section -->
        <activity
            android:name=".tests.RestaurantTestActivity"
            android:label="@string/title_restaurant_test_activity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="nosensor">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".tests.LocuMenuTestActivity"
            android:label="@string/title_locu_menu_test_activity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="nosensor" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ResultPageActivity"
            android:label="@string/how_about"
            android:screenOrientation="nosensor"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".tests.MapsTestActivity"
            android:label="@string/title_activity_maps_test"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="nosensor">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".tests.RestaurantSelectorTestActivity"
            android:label="@string/title_activity_restaurant_selector_test">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UserPreferencesActivity" />
        </activity>
        <activity
            android:name=".tests.SharedPreferencesTestActivity"
            android:label="@string/title_activity_shared_preferences_test"
            android:parentActivityName=".UserPreferencesActivity"
            android:screenOrientation="nosensor">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UserPreferencesActivity" />
        </activity>
        <!-- END TEST ACTIVITIES -->

    </application>

</manifest>
