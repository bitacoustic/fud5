<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<ImageView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/imgBackground"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_alignParentStart="true"-->
    <!--android:src="@drawable/test_background"-->
    <!--android:scaleType="center" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.csc413.team5.fud5.ResultPageActivityFragment"
        android:id="@+id/resultPage"
        style="@style/RtlOverlay.Widget.AppCompat.DialogTitle.Icon">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bob&apos;s Burgers"
            android:textSize="34sp"
            android:singleLine="true"
            android:id="@+id/restaurantName"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:background="@color/material_deep_teal_200" />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="100pt"
            android:id="@+id/map"
            android:layout_above="@+id/buttonBar"
            android:layout_alignParentStart="true"
            tools:context="com.csc413.team5.fud5.MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment" />

        <LinearLayout
            android:id="@+id/buttonBar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/green"
                android:id="@+id/greenButton"
                android:clickable="true"
                android:background="@color/Green"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:focusable="false"
                android:enabled="false" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/yellow"
                android:id="@+id/yellowButton"
                android:clickable="true"
                android:background="@color/Gold"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/red"
                android:id="@+id/redButton"
                android:clickable="true"
                android:background="@color/Red"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:onClick="displayNextResult" />

        </LinearLayout>


    </RelativeLayout>
</FrameLayout>