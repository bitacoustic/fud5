<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/Purple"
              android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/dialog_eula_title"
            android:id="@+id/dialogEulaTitle"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/Gold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="439dp"
            android:id="@+id/dialogEulaScrollView"
            android:layout_gravity="center_horizontal"
            android:background="#FFFFFF"
            android:padding="15dp"
            android:layout_weight="0.37"
            android:layout_below="@+id/dialogEulaTitle"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/dialogEulaButton"
            android:layout_marginTop="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/dialogEulaText"
                android:textSize="12dp"
                android:textColor="#000000"/>
        </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_eula_button_ok"
            android:id="@+id/dialogEulaButton"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>
    </RelativeLayout>

</LinearLayout>